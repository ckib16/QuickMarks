<h1>Bookmark</h1>

<h2> <%= @bookmark.url %>  </h2>

<% if policy(@bookmark).edit? %>
  <%= link_to "Edit", edit_topic_bookmark_path(@topic, @bookmark), class: "btn btn-warning" %>

  <%= link_to "Delete Bookmark", [@topic, @bookmark], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete?" } %>
<% end %>
